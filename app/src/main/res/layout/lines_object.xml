<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/route"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="6dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bus_code_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Letreiro: 6L10-10"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/destiny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destino: PQ. FLORESTAL"
                android:textSize="14sp"
                android:textColor="#AEABAB"/>

            <TextView
                android:id="@+id/origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origiem: TERM. VARGINHA"
                android:textSize="14sp"
                android:textColor="#AEABAB"/>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade: 1 veÃ­culo"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:textColor="#AEABAB"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
